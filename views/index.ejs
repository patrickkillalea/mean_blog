<html>

<head>
    <title>Flapper News</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js"></script>
    <script src="/javascripts/angularApp.js"></script>
    <style>
    .glyphicon-thumbs-up {
        cursor: pointer
    }
    </style>
</head>

<body ng-app="flapperNews" ng-controller="MainCtrl">
    <!-- start header -->
    <!-- end header -->
    <!-- View Injector! -->
    <ui-view></ui-view>
    <!-- View Injector! -->
    <script type="text/ng-template" id="/home.html">
        <div class="jumbotron jumbotron-fluid visible" style="background: url('https://images.unsplash.com/photo-1420745981456-b95fe23f5753?ixlib=rb-0.3.5&q=80&fm=jpg&crop=entropy&w=1080&fit=max&s=c7992ffcac63dd7c07a156c12c4e9318') no-repeat center center fixed; height:500px; background-size: cover;">
            <div class="container">
                <nav id="menu">
                    <ul>
                        <li><a href="#/home"><i class="icon-home"></i> home</a></li>
                        <li><a href="#/about"><i class="icon-file-alt"></i> about</a></li>
                        <li><a href="#/blog"><i class="icon-copy"></i> blog</a></li>
                        <li><a href="#/contacts"><i class="icon-envelope"></i> contacts</a></li>
                    </ul>
                </nav>
            </div>
            <div align="center">
                <div class="hidden-xs">
                    <div style="width: 300px; height: 300px; ">
                        <img src="https://pbs.twimg.com/profile_images/451007105391022080/iu1f7brY_400x400.png" style="height:100%; width:100%; border-radius: 50%">
                    </div>
                </div>
                <div class="visible-xs">
                    <div style="width: 200px; height: 200px; ">
                        <img src="https://pbs.twimg.com/profile_images/451007105391022080/iu1f7brY_400x400.png" style="height:100%; width:100%; border-radius: 50%">
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div ng-repeat="post in posts" align="center">
                <a href="#/posts/{{post._id}}">
                    <div class="col-md-6 col-sm-6 col-xs-12">
                        <div class="articleContainer">
                            <img src="{{post.image}}" height="200px" width="100%">
                            <div class="transparent articleDate">
                                {{post.date}}
                            </div>
                            <div class="transparent articleTitle">
                                {{post.title}}
                            </div>
                            <div class="articleContent">
                                <p>{{post.content}}</p>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        </div>
        <div class="container">
            <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Add Blog</button>
            <!-- Modal -->
            <div class="modal fade" id="myModal" role="dialog">
                <div class="modal-dialog">
                    <!-- Modal content-->
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title">Add a new blog</h4>
                        </div>
                        <div class="modal-body">
                            <form ng-submit="addPost()" style="margin-top:10px;">
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="Title" ng-model="title"></input>
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="Date" ng-model="date"></input>
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="Image" ng-model="image"></input>
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="Content" ng-model="content"></input>
                                </div>
                                <button type="submit" class="btn btn-primary">Post</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </script>
    <script type="text/ng-template" id="/about.html">
        <div class="jumbotron jumbotron-fluid visible" style="background: url('https://images.unsplash.com/photo-1420745981456-b95fe23f5753?ixlib=rb-0.3.5&q=80&fm=jpg&crop=entropy&w=1080&fit=max&s=c7992ffcac63dd7c07a156c12c4e9318') no-repeat center center fixed; height:500px; background-size: cover;">
            <div class="container">
                <nav id="menu">
                    <ul>
                        <li><a href="#/home"><i class="icon-home"></i> home</a></li>
                        <li><a href="#/about"><i class="icon-file-alt"></i> about</a></li>
                        <li><a href="#/blog"><i class="icon-copy"></i> blog</a></li>
                        <li><a href="#/contacts"><i class="icon-envelope"></i> contacts</a></li>
                    </ul>
                </nav>
            </div>
        </div>
        <h1>About Me</h1>
    </script>
    <script type="text/ng-template" id="/blog.html">
        <div class="jumbotron jumbotron-fluid visible" style="background: url('https://images.unsplash.com/photo-1420745981456-b95fe23f5753?ixlib=rb-0.3.5&q=80&fm=jpg&crop=entropy&w=1080&fit=max&s=c7992ffcac63dd7c07a156c12c4e9318') no-repeat center center fixed; height:500px; background-size: cover;">
            <div class="container">
                <nav id="menu">
                    <ul>
                        <li><a href="#/home"><i class="icon-home"></i> home</a></li>
                        <li><a href="#/about"><i class="icon-file-alt"></i> about</a></li>
                        <li><a href="#/blog"><i class="icon-copy"></i> blog</a></li>
                        <li><a href="#/contacts"><i class="icon-envelope"></i> contacts</a></li>
                    </ul>
                </nav>
            </div>
        </div>
        <h1>Blog News</h1>
    </script>
    <script type="text/ng-template" id="/contacts.html">
        <div class="jumbotron jumbotron-fluid visible" style="background: url('https://images.unsplash.com/photo-1420745981456-b95fe23f5753?ixlib=rb-0.3.5&q=80&fm=jpg&crop=entropy&w=1080&fit=max&s=c7992ffcac63dd7c07a156c12c4e9318') no-repeat center center fixed; height:500px; background-size: cover;">
            <div class="container">
                <nav id="menu">
                    <ul>
                        <li><a href="#/home"><i class="icon-home"></i> home</a></li>
                        <li><a href="#/about"><i class="icon-file-alt"></i> about</a></li>
                        <li><a href="#/blog"><i class="icon-copy"></i> blog</a></li>
                        <li><a href="#/contacts"><i class="icon-envelope"></i> contacts</a></li>
                    </ul>
                </nav>
            </div>
        </div>
        <h1>Contact Info</h1>
    </script>
    <script type="text/ng-template" id="/posts.html">
        <div class="jumbotron jumbotron-fluid visible" style="background: url('{{post.image}}') no-repeat center center fixed; height:600px; background-size: cover;">
            <div class="container">
                <nav id="menu">
                    <ul>
                        <li><a href="#/home"><i class="icon-home"></i> home</a></li>
                        <li><a href="#/about"><i class="icon-file-alt"></i> about</a></li>
                        <li><a href="#/blog"><i class="icon-copy"></i> blog</a></li>
                        <li><a href="#/contacts"><i class="icon-envelope"></i> contacts</a></li>
                    </ul>
                </nav>
            </div>
        </div>
        <div class="page-header">
            <h3>{{post.title}}</h3>
            <p>{{post.date}}</p>
            <p>{{post.content}}</p>
        </div>
        <span style="float: right;" ng-click="deletePost(post)">
                <a href="#/home"><i class="icon-home"></i> Delete</a>
            </span>
    </script>
</body>

</html>

<!-- Front Page Blog Style -->
<style>
.transparent {
    background: rgba(0, 0, 0, 0.6);
}

.articleContainer {
    width: 100%;
    height: 300px;
    position: relative;
    box-shadow: 4px 4px 2px #888888;
    margin-bottom: 20px;
}

.articleTitle {
    color: white;
    width: 40%;
    height: 30px;
    bottom: 100px;
    left: 30%;
    position: absolute;
    font-size: 20px;
}

.articleDate {
    color: white;
    width: 100px;
    height: 20px;
    right: 0px;
    top: 0px;
    position: absolute;
    font-size: 14px;
}

.articleContent {
    background-color: whitesmoke;
    width: 100%;
    height: 100px;
    bottom: 0px;
    position: absolute;
    font-size: 16px;
}
</style>
<!-- Front Page Blog Style -->
<!-- Navbar Style -->
<style>
@import url('https://fonts.googleapis.com/css?family=Merriweather+Sans:700,300');
@import url('https://netdna.bootstrapcdn.com/font-awesome/3.1.1/css/font-awesome.css');
* {
    padding: 0px;
    margin: 0px;
    border: 0px;
    outline: 0px;
}

li {
    list-style: none;
}

#menu ul {
    position: relative;
    left: 25%;
    width: 50%;
    background: rgba(0, 0, 0, 0.6);
}

#menu li {
    display: inline-block;
    margin: 20px;
}

#menu li a {
    border-radius: 3px;
    padding: 5px;
    border: 1px solid transparent;
    text-decoration: none;
    font-size: 18px;
    color: #fff;
    -webkit-transition: all 0.2s ease-in-out;
    -moz-transition: all 0.2s ease-in-out;
    -o-transition: all 0.2s ease-in-out;
    transition: all 0.2s ease-in-out;
}

#menu li a:hover {
    border-color: #fff;
}

#menu li a i {
    margin-right: 5px;
    font-size: 24px;
}
</style>
<style>
a:link {
    color: black;
}

a:visited {
    color: black;
}
</style>
<!-- Navbar Style -->